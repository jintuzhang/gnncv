# vim:ft=plumed

phi: TORSION ATOMS=5,7,9,15
psi: TORSION ATOMS=7,9,15,17

OPES_METAD ...
  LABEL=opes
  ARG=phi,psi
  FILE=KERNELS
  STATE_RFILE=COMPRESSED.KERNELS
  STATE_WFILE=COMPRESSED.KERNELS
  STATE_WSTRIDE=1000000
  PACE=500
  TEMP=300
  BARRIER=45
... OPES_METAD

PRINT ARG=opes.*,phi,psi FILE=colvar STRIDE=100
